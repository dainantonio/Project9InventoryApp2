<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the editor -->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".EditorActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inventory_management"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/product_name"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            <!-- Name field -->
            <EditText
                    android:id="@+id/edit_product_name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_product_name"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:inputType="text" android:autofillHints="@string/name_of_the_product"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/quality"/>


        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            <Spinner
                    android:id="@+id/spinner_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingRight="16dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:spinnerMode="dropdown"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/product_price"
                  android:paddingTop="16dp"
                  android:textSize="12sp"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            <!-- Price field -->
            <EditText
                    android:id="@+id/edit_product_price"
                    android:hint="@string/hint_product_price"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:autofillHints="@string/price_of_the_product"/>
        </RelativeLayout>

    </LinearLayout>

    <!-- Quantity editing -->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/quantity"
                  android:paddingTop="16dp"
                  android:textSize="12sp"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            <!-- Quantity field -->
            <EditText
                    android:id="@+id/edit_product_quantity"
                    android:hint="@string/hint_product_quantity"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:textAppearanceSmall" android:autofillHints="@string/amount"/>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <!-- Supplier name -->
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/supplier_name"
                  android:paddingTop="16dp"
                  android:textSize="12sp"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            <!-- Supplier name -->
            <EditText
                    android:id="@+id/edit_product_supplier_name"
                    android:hint="@string/hint_product_supplier_name"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:autofillHints="@string/name_of_supplier"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <!-- Supplier phone number -->
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/supplier_contact"
                  android:paddingTop="16dp"
                  android:textSize="12sp"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            <!-- Supplier name -->
            <EditText
                    android:id="@+id/edit_product_supplier_phone_number"
                    android:hint="@string/hint_supplier_phone_number"
                    android:inputType="phone"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:autofillHints="@string/supplier_number"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>

